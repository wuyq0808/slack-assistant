{
  "mcpServers": {
    "slack-assistant": {
      "type": "http",
      "url": "http://localhost:5173",
      "description": "Slack MCP Server via HTTP API",
      "endpoints": {
        "conversations_history": {
          "method": "GET",
          "path": "/api/slack/conversations",
          "description": "Get conversation history from a Slack channel",
          "parameters": {
            "channel_id": "string (required) - Channel ID or name (#general)",
            "limit": "number - Number of messages to fetch",
            "cursor": "string - Pagination cursor",
            "include_activity": "boolean - Include system messages"
          }
        },
        "conversations_replies": {
          "method": "GET", 
          "path": "/api/slack/replies",
          "description": "Get replies from a message thread",
          "parameters": {
            "channel_id": "string (required) - Channel ID",
            "thread_ts": "string (required) - Thread timestamp",
            "limit": "number - Number of replies to fetch"
          }
        },
        "conversations_search": {
          "method": "GET",
          "path": "/api/slack/search",
          "description": "Search messages across Slack",
          "parameters": {
            "query": "string (required) - Search query",
            "limit": "number - Number of results",
            "filter_in_channel": "string - Filter by channel",
            "filter_users_from": "string - Filter by sender"
          }
        },
        "channels_list": {
          "method": "GET",
          "path": "/api/slack/channels",
          "description": "List all accessible Slack channels"
        },
        "conversations_add_message": {
          "method": "POST",
          "path": "/api/slack/conversations",
          "description": "Send a message to Slack (requires SLACK_ADD_MESSAGE_ENABLED=true)",
          "body": {
            "channel_id": "string (required) - Channel ID", 
            "text": "string (required) - Message text",
            "thread_ts": "string - Thread timestamp for replies",
            "content_type": "string - text/plain or text/markdown"
          }
        }
      }
    }
  }
}